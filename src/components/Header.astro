---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="w-full flex justify-center bg-base-100 shadow-sm">
  <nav class="navbar max-w-5xl w-full px-4">
    <div class="flex-1">
      <div class="flex gap-4">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/projects">Projects</HeaderLink>
        <HeaderLink href="/notes">Notes</HeaderLink>
      </div>
    </div>

    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-sm m-1">
          Theme
          <svg
            width="12px"
            height="12px"
            class="ml-1 inline-block h-2 w-2 fill-current opacity-60"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 2048 2048"
          >
            <path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z"
            ></path>
          </svg>
        </div>
        <ul
          tabindex="0"
          class="dropdown-content bg-base-300 rounded-box z-50 w-52 p-2 shadow-2xl"
        >
          {
            ["retro", "luxury", "light"].map((theme) => (
              <li>
                <input
                  type="radio"
                  name="theme-dropdown"
                  class="theme-controller w-full btn btn-sm btn-block btn-ghost justify-start"
                  aria-label={theme.charAt(0).toUpperCase() + theme.slice(1)}
                  value={theme}
                />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>
